<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<ItemGroup>
	  <None Remove="DebugFiles\database_test.db" />
	  <None Remove="Icon\dotnet_bot.png" />
	  <None Remove="Icon\favicon.ico" />
	  <None Remove="Templates\feeditem.html.hbs" />
	  <None Remove="Views\" />
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Include="DebugFiles\database_test.db" />
	  <EmbeddedResource Include="Icon\dotnet_bot.png" />
	  <EmbeddedResource Include="Icon\favicon.ico" />
	  <EmbeddedResource Include="Templates\feeditem.html.hbs" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="AngleSharp" Version="0.17.1" />
	  <PackageReference Include="CodeHollow.FeedReader" Version="1.2.4" />
	  <PackageReference Include="Drastic.Utilities" Version="1.0.10" />
	  <PackageReference Include="FlexLabs.EntityFrameworkCore.Upsert" Version="7.0.0" />
	  <PackageReference Include="Handlebars.Net" Version="2.1.2" />
	  <PackageReference Include="LiteDB" Version="5.0.15" />
	  <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite.Core" Version="7.0.1" />
	  <PackageReference Include="SmartReader" Version="0.9.1" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Update="Translations\Common.Designer.cs">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>Common.resx</DependentUpon>
	  </Compile>
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Update="Translations\Common.resx">
	    <Generator>PublicResXFileCodeGenerator</Generator>
	    <LastGenOutput>Common.Designer.cs</LastGenOutput>
	  </EmbeddedResource>
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Views\" />
	</ItemGroup>
</Project>
