<Window
    x:Class="MauiFeed.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MauiFeed.WinUI"
    xmlns:common="using:MauiFeed.Translations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:models="using:MauiFeed.Models"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Top" Orientation="Horizontal" x:Name="AppTitleBar" Margin="50,0,0,0" Height="34">
            <Border Margin="7,14,0,0" CornerRadius="7">
                <Image  Width="20" Height="20" Source="Assets/SmallTile.scale-125.png" x:Name="AppIcon" />
            </Border>
            <TextBlock x:Name="AppTitleTextBlock" Text="{x:Bind common:Common.AppTitle}"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Margin="12,14,0,0" VerticalAlignment="Center" />
        </StackPanel>
        <NavigationView 
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="False"
            MenuItemsSource="{x:Bind Items, Mode=OneWay}" 
            SelectionChanged="NavView_SelectionChanged"
            IsTitleBarAutoPaddingEnabled="False"
            x:Name="NavView">
            <NavigationView.AutoSuggestBox>
                <AutoSuggestBox x:Name="FeedSuggestBox" QuerySubmitted="FeedSuggestBox_QuerySubmitted" HorizontalAlignment="Stretch" QueryIcon="Find"/>
            </NavigationView.AutoSuggestBox>

            <NavigationView.Content>
                <SplitView DisplayMode="Inline" IsPaneOpen="True">
                    <SplitView.Pane>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid Margin="20,15,0,20" Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" FontWeight="Bold" MaxLines="1" TextTrimming="WordEllipsis" Text="{x:Bind SelectedNavigationViewItem.Content, Mode=OneWay}"/>
                                <StackPanel Margin="0,33,0,0" Grid.Column="1" Orientation="Horizontal">
                                    <Button Margin="0,0,20,0">
                                        <Grid>
                                            <FontIcon FontSize="14" VerticalAlignment="Center" FontFamily="Segoe Fluent Icons" Glyph="" />
                                        </Grid>
                                    </Button>
                                    <Button Click="Button_Click" Margin="0,0,20,0">
                                        <Grid>
                                            <FontIcon FontSize="14" VerticalAlignment="Center" FontFamily="Segoe Fluent Icons" Glyph="" />
                                        </Grid>
                                    </Button>
                                </StackPanel>
                            </Grid>
                            <ListView x:Name="ArticleList" Grid.Row="1" ItemsSource="{x:Bind SelectedNavigationViewItem.Items, Mode=OneWay}" SelectionMode="Single" SelectionChanged="ArticleList_SelectionChanged" Grid.Column="0">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="models:FeedItem">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="20"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid VerticalAlignment="Top" Margin="0,10,0,0" Grid.Column="0">
                                                <FontIcon FontSize="13" VerticalAlignment="Center" FontFamily="Segoe Fluent Icons" Visibility="{Binding IsRead, Converter={StaticResource BooleanToVisibilityInverter}}" Foreground="{ThemeResource SystemAccentColor}" Glyph="" />
                                                <FontIcon FontSize="13" VerticalAlignment="Center" FontFamily="Segoe Fluent Icons" Visibility="{Binding IsFavorite, Converter={StaticResource BooleanToVisibilityConverter}}" Foreground="Yellow" Glyph="" />
                                                <FontIcon FontSize="13" VerticalAlignment="Center" FontFamily="Segoe Fluent Icons" Glyph="" />
                                            </Grid>
                                            <StackPanel Grid.Column="1" Margin="5" Orientation="Vertical">
                                                <TextBlock TextWrapping="Wrap" MaxLines="2" TextTrimming="WordEllipsis" FontWeight="Bold" Text="{Binding Title}"></TextBlock>
                                                <TextBlock TextWrapping="Wrap" MaxLines="2" TextTrimming="WordEllipsis" Text="{Binding Converter={StaticResource HtmlToTextConverter}}"></TextBlock>
                                                <TextBlock MaxLines="1" FontWeight="Bold" FontSize="12" TextAlignment="End" Text="{Binding PublishingDate}"/>
                                            </StackPanel>
                                            <Grid.ContextFlyout>
                                                <MenuFlyout>
                                                    <MenuFlyoutItem 
                                                        Command="{Binding ElementName=ArticleList, Path=DataContext.MarkAsReadCommand}"
                                                        CommandParameter="{Binding}"
                                                        Text="{Binding IsRead,  Converter={StaticResource UnreadReadLabelConverter} }" />
                                                    <MenuFlyoutItem
                                                        Command="{Binding ElementName=ArticleList, Path=DataContext.MarkAsFavoriteCommand}"
                                                        CommandParameter="{Binding}"
                                                        Text="{Binding IsFavorite,  Converter={StaticResource FavoriteLabelConverter} }" />
                                                    <MenuFlyoutItem
                                                        Command="{Binding ElementName=ArticleList, Path=DataContext.OpenInBrowserCommand}"
                                                        CommandParameter="{Binding}"
                                                        Text="{x:Bind common:Common.OpenInBrowserLabel}" />
                                                </MenuFlyout>
                                            </Grid.ContextFlyout>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </SplitView.Pane>
                    <SplitView.Content>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <local:RssWebview Grid.Row="1" x:Name="LocalRssWebview"/>
                        </Grid>
                    </SplitView.Content>
                </SplitView>
            </NavigationView.Content>
        </NavigationView>
    </Grid>
</Window>
