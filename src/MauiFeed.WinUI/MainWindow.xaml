<Window
    x:Class="MauiFeed.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MauiFeed.WinUI"
    xmlns:views="using:MauiFeed.WinUI.Views"
    xmlns:common="using:MauiFeed.Translations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:models="using:MauiFeed.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="MainWindowGrid">
        <StackPanel VerticalAlignment="Top" Orientation="Horizontal" x:Name="AppTitleBar" Margin="50,0,0,0" Height="34">
            <Border Margin="7,14,0,0" CornerRadius="7">
                <Image  Width="20" Height="20" Source="Assets/Square150x150Logo.scale-200.png" x:Name="AppIcon" />
            </Border>
            <TextBlock x:Name="AppTitleTextBlock" Text="{x:Bind common:Common.AppTitle}"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Margin="12,14,0,0" VerticalAlignment="Center" />
        </StackPanel>
        <NavigationView
             x:Name="NavView"
            IsSettingsVisible="False"
            IsBackButtonVisible="Collapsed"
            MenuItemsSource="{x:Bind Items, Mode=OneWay}"
            SelectionChanged="NavView_SelectionChanged"
            IsTitleBarAutoPaddingEnabled="False">
            <NavigationView.Content>
                <Frame x:Name="NavigationFrame" />
            </NavigationView.Content>
        </NavigationView>
    </Grid>
</Window>
