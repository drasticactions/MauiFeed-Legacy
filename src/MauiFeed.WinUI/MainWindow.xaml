<winex:WindowEx
    xmlns:winex="using:WinUIEx"
    x:Class="MauiFeed.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MauiFeed.WinUI"
    xmlns:common="using:MauiFeed.Translations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MinWidth="750"
    MinHeight="400"
    mc:Ignorable="d">

    <!--If you don't add Window.Content, you don't get theme support. No, I don't know why.-->
    <Window.Content>
        <Grid x:Name="MainWindowGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="42"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal" x:Name="AppTitleBar" Grid.Row="0">
                <Border Margin="14,14,0,0" CornerRadius="7">
                    <Image  Width="20" Height="20" Source="Assets/Square150x150Logo.scale-200.png" x:Name="AppIcon" />
                </Border>
                <TextBlock x:Name="AppTitleTextBlock" Text="{x:Bind common:Common.AppTitle}"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Margin="12,14,0,0" VerticalAlignment="Center" />
            </StackPanel>
            <NavigationView
            x:Name="NavView"
            Grid.Row="1"
            IsSettingsVisible="True"
            IsBackButtonVisible="Collapsed"
            MenuItemsSource="{x:Bind Items, Mode=OneWay}"
            SelectionChanged="NavViewSelectionChanged"
            IsTitleBarAutoPaddingEnabled="False">
                <NavigationView.AutoSuggestBox>
                    <AutoSuggestBox x:Name="FeedSearchBox" QuerySubmitted="FeedSearchBoxQuerySubmitted" QueryIcon="Find"/>
                </NavigationView.AutoSuggestBox>
                <NavigationView.Content>
                    <Frame x:Name="NavigationFrame" />
                </NavigationView.Content>
            </NavigationView>
        </Grid>
    </Window.Content>
</winex:WindowEx>
